<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reader Home Page</title>
  <link href="/css/styles.css" rel="stylesheet">
</head>

<body>
  <nav class="bg-gray-800 flex justify-between">
    <div class="ml-4">
      <% if (user) { %>
      <a href="/author" class="text-white px-4 py-2 hover:bg-blue-600 rounded">Author Dashboard</a>
    </div>
    
      <a href="/logout" class="text-white px-4 py-2 hover:bg-red-600 rounded">Logout</a>
    <% } else { %>
      <a href="/login" class="text-white px-4 py-2 hover:bg-blue-600 rounded">Login</a>
    <% } %>
  </nav>


  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="mb-6">
      <% blogSettings.forEach((setting) => { %>
      <h2 class="text-xl font-semibold mb-2">Blog Title: <%= setting.title %></h2>
      <h3 class="text-lg font-medium mb-2">Subtitle: <%= setting.subtitle %></h3>
      <h3 class="text-lg font-medium">Author: <%= setting.author %></h3>
      <% }) %>
    </div>
  
    <h2 class="text-2xl font-bold mb-4">Reader - Home Page</h2>
  
    <% if (articles.length === 0) { %>
      <p>No articles yet.</p>
    <% } else { %>
      <% articles.forEach((article) => { %>
        <% if (article.published_at) { %>
          <article class="mb-8">
            <h3 class="text-xl font-semibold"><%= article.title %></h3>
            <p class="text-gray-500"><%= article.content %></p>
            <a href="/reader/article/<%= article.id %>" class="text-blue-500 hover:text-red-700 underline">Read Full</a>
  
            <p class="text-gray-500">Published: <%= (article.published_at) %></p>
            <p class="text-gray-500">Likes: <%= (article.likes) %></p>
          </article>
        <% } %>
      <% }) %>
    <% } %>
  </main>
  

  <footer class="bg-gray-100 ">
  </footer>

</body>

</html>
